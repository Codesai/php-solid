{
  "name": "codesai/php-solid",
  "description": "Project with SOLID katas",
  "authors": [
    {
      "name": "Alfredo Casado",
      "email": "alfredo@codesai.com"
    }
  ],
  "require": {
    "php": "^7.3|^8.0"
  },
  "autoload": {
    "psr-4": {
      "RacingCar\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "test/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "scripts": {
    "test": "phpunit",
    "tests": "phpunit",
    "test-coverage": "phpunit --coverage-html build/coverage"
  }
}
